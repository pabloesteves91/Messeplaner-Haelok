rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /logos/{allPaths=**} {
      // Logos k√∂nnen von allen gelesen, aber nur von Authentifizierten geschrieben werden
      allow read: if true;
      allow write: if request.auth != null || request.resource.size < 5 * 1024 * 1024;
    }
  }
}
